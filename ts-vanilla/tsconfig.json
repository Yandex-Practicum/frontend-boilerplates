{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "outDir": "./dist",
        "lib": ["dom", "es2017"],
        "baseUrl": ".",
        "paths": {
            "__assets": ["./static/assets/*"],
            "__styles": ["./static/styles/*"],
            "__utils": ["./static/utils/*"],

            "*": ["node_modules/*", "static/*", "*"]
        },
        "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"]
    },
    "include": [
        "static",
        "typings/**/*.d.ts",
        "node_modules/@types"
    ],
    "compileOnSave": false,
    "exclude": ["public", "node_modules", "dist"]
}
